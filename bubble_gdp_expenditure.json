{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "width": 630,
  "height": 495,
  "background": "transparent",
  "title": {
    "text": "How Does Education Spending Relate to a Country's Wealth?",
    "font": "Nunito Sans",
    "fontSize": 19,
    "anchor": "start"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/danielkohsj/3179_A2/refs/heads/main/data/modified_dataset_main.csv"
  },
  "transform": [
    { "filter": "datum['Year'] == year_selection" },
    {
      "filter": "datum['School enrollment, tertiary (% gross)'] != null"
    },
    {
      "filter": "datum['Adjusted savings: education expenditure (current US$)'] != null"
    },
    {
      "filter": "datum['Population, total'] != null && datum['Population, total'] > 0"
    },
    {
      "filter": "continent_selection == 'Show All' || datum['Continent'] == continent_selection"
    },
    {
      "calculate": "datum['Adjusted savings: education expenditure (current US$)'] / datum['Population, total']",
      "as": "Education Expenditure Per Capita"
    }
  ],
  "params": [
    {
      "name": "year_selection",
      "value": 2021,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2021,
        "step": 1,
        "name": "Year:"
      }
    },
    {
      "name": "continent_selection",
      "value": "Show All",
      "bind": {
        "input": "select",
        "options": [
          "Show All",
          "Asia",
          "Africa",
          "Europe",
          "North America",
          "South America",
          "Oceania"
        ],
        "name": "Continent:"
      }
    }
  ],
  "layer": [
    {
      "selection": {
        "grid": {
          "type": "interval",
          "bind": "scales"
        },
        "hover": {
          "type": "single",
          "on": "mouseover",
          "clear": "mouseout",
          "empty": "all"
        }
      },
      "mark": "circle",
      "encoding": {
        "x": {
          "field": "GDP per capita (current US$)",
          "type": "quantitative",
          "title": "GDP Per Capita (in US$)",
          "axis": { "labelAngle": -45 },
          "scale": {
            "type": "pow",
            "exponent": 0.5,
            "domain": [0, 100000]
          }
        },
        "y": {
          "field": "Education Expenditure Per Capita",
          "type": "quantitative",
          "title": "Education Expenditure Per Capita (US$)"
        },
        "size": {
          "field": "Population, total",
          "type": "quantitative",
          "title": "Population",
          "scale": {
            "type": "threshold",
            "domain": [
              1000000,
              10000000,
              50000000,
              100000000,
              500000000
            ],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {
            "format": ".1s"
          }
        },
        "color": {
          "field": "School enrollment, tertiary (% gross)",
          "type": "quantitative",
          "title": "Tertiary Enrolment (%)",
          "scale": {
            "type": "quantize",
            "domain": [0, 120],
            "range": ["#ffcccc", "#f7a3a3", "#ef7a7a", "#e75252", "#df2929", "#800000"]
          }
        },
        "opacity": {
          "condition": {
            "selection": "hover",
            "value": 0.7
          },
          "value": 0.2
        },
        "tooltip": [
          { "field": "Country", "type": "nominal" },
          {
            "field": "Population, total",
            "type": "quantitative",
            "format": ",",
            "title": "Population"
          },
          {
            "field": "GDP per capita (current US$)",
            "type": "quantitative",
            "format": ",.2f",
            "title": "GDP Per Capita (US$)"
          },
          {
            "field": "Education Expenditure Per Capita",
            "type": "quantitative",
            "format": ".2f",
            "title": "Education Expenditure Per Capita (US$)"
          },
          {
            "field": "School enrollment, tertiary (% gross)",
            "type": "quantitative",
            "format": ".2f",
            "title": "Tertiary Enrolment (%)"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11,
        "fontStyle": "italic"
      },
      "encoding": {
        "x": {
          "field": "GDP per capita (current US$)",
          "type": "quantitative",
          "axis": {"grid": false},
          "scale": {
            "type": "pow",
            "exponent": 0.5,
            "domain": [0, 100000]
          }
        },
        "y": {
          "field": "Education Expenditure Per Capita",
          "type": "quantitative"
        },
        "text": { "field": "Country", "type": "nominal" },
        "color": { "value": "black" },
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand' || datum['Country'] == 'Ireland' || datum['Country'] == 'India' || datum['Country'] == 'Norway'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          { "field": "Country", "type": "nominal" },
          {
            "field": "Population, total",
            "type": "quantitative",
            "format": ",",
            "title": "Population"
          },
          {
            "field": "GDP per capita (current US$)",
            "type": "quantitative",
            "format": ",.2f",
            "title": "GDP Per Capita (US$)"
          },
          {
            "field": "Education Expenditure Per Capita",
            "type": "quantitative",
            "format": ".2f",
            "title": "Education Expenditure Per Capita (US$)"
          },
          {
            "field": "School enrollment, tertiary (% gross)",
            "type": "quantitative",
            "format": ".2f",
            "title": "Tertiary Enrolment (%)"
          }
        ]
      }
    }
  ],
  "config": {
    "axis": {
      "labelFont": "Nunito Sans",
      "titleFont": "Nunito Sans"
    },
    "title": {
      "font": "Nunito Sans"
    },
    "legend": {
      "labelFont": "Nunito Sans",
      "titleFont": "Nunito Sans"
    },
    "text": {
      "font": "Nunito Sans"
    }
  }
}