{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 950,
  "height": 350,
  "background": "transparent",
  "projection": {"type": "equalEarth"},
  "params": [
    {
      "name": "continent_selector",
      "value": "Show All",
      "bind": {
        "input": "select",
        "options": [
          "Show All",
          "Asia",
          "Africa",
          "Europe",
          "North America",
          "South America",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "Asia",
          "Africa",
          "Europe",
          "North America",
          "South America",
          "Oceania"
        ],
        "name": "Continent: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/danielkohsj/3179_A2/refs/heads/main/topojson/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/danielkohsj/3179_A2/refs/heads/main/data/dataset_choropleth_map.csv",
              "format": {"type": "csv"}
            },
            "key": "Country Name",
            "fields": ["Value", "Continent"]
          }
        },
        {
          "filter": "continent_selector == 'Show All' || datum.Continent == continent_selector"
        }
      ],
      "selection": {
        "hover": {
          "type": "single",
          "on": "mouseover",
          "empty": "none",
          "fields": ["properties.NAME"]
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "white"
      },
      "encoding": {
        "color": {
          "field": "Value",
          "type": "quantitative",
          "scale": {
            "type": "quantize",
            "domain": [0, 120],
            "range": ["#ffcccc", "#f7a3a3", "#ef7a7a", "#e75252", "#df2929", "#800000"]
          },
          "legend": {
            "title": "Tertiary Enrolment (%)",
            "orient": "bottom",
            "labelFormat": ".0f"
          }
        },
        "fillOpacity": {
          "condition": {"selection": "hover", "value": 1},
          "value": 0.85
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Value", "type": "quantitative", "title": "Enrolment Rate (%)", "format": ".2f"},
          {"field": "Continent", "type": "nominal", "title": "Continent"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/danielkohsj/3179_A2/refs/heads/main/topojson/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/danielkohsj/3179_A2/refs/heads/main/data/dataset_choropleth_map.csv",
              "format": {"type": "csv"}
            },
            "key": "Country Name",
            "fields": ["Value"]
          }
        },
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        },
        {
          "filter": "!isValid(datum.Value)"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/danielkohsj/3179_A2/refs/heads/main/topojson/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/danielkohsj/3179_A2/refs/heads/main/topojson/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    }
  ],
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "axis": {
      "labelFont": "Nunito Sans",
      "titleFont": "Nunito Sans"
    },
    "legend": {
      "labelFont": "Nunito Sans",
      "titleFont": "Nunito Sans"
    },
    "title": {
      "font": "Nunito Sans"
    },
    "text": {
      "font": "Nunito Sans"
    }
  }
}