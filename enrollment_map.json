{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 450,
  "background": "transparent",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/danielkohsj/3179/refs/heads/main/A2%20WDI%20Dataset_Cleaned.csv",
              "format": {"type": "csv"}
            },
            "key": "Country Name",
            "fields": ["Value"]
          }
        }
      ],
      "selection": {
        "hover": {
          "type": "single",
          "on": "mouseover",
          "empty": "none",
          "fields": ["properties.NAME"]
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "white"
      },
      "encoding": {
        "color": {
          "field": "Value",
          "type": "quantitative",
          "scale": {
            "type": "linear",
            "domain": [0, 120],
            "range": ["lightyellow", "red"]
          },
          "legend": {
            "title": "Tertiary Enrollment Rate (%)",
            "orient": "bottom"
          }
        },
        "fillOpacity": {
          "condition": {"selection": "hover", "value": 1},
          "value": 0.85
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Value", "type": "quantitative", "title": "Enrollment Rate (%)"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/danielkohsj/3179/refs/heads/main/A2%20WDI%20Dataset_Cleaned.csv",
              "format": {"type": "csv"}
            },
            "key": "Country Name",
            "fields": ["Value"]
          }
        },
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        },
        {
          "filter": "!isValid(datum.Value)"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "data": {
        "values": [
          {"continent": "Africa", "lon": 20, "lat": 10},
          {"continent": "Asia", "lon": 90, "lat": 45},
          {"continent": "Europe", "lon": 10, "lat": 50},
          {"continent": "North America", "lon": -100, "lat": 40},
          {"continent": "South America", "lon": -57, "lat": -12},
          {"continent": "Oceania", "lon": 157, "lat": -27}
        ]
      },
      "mark": {
        "type": "text",
        "fontSize": 12,
        "fontWeight": "bold",
        "fill": "black"
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "text": {"field": "continent"},
        "tooltip": {"field": "continent", "type": "nominal", "title": "Continent"}
      }
    }
  ],
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "axis": {
      "labelFont": "Nunito Sans",
      "titleFont": "Nunito Sans"
    },
    "legend": {
      "labelFont": "Nunito Sans",
      "titleFont": "Nunito Sans"
    },
    "title": {
      "font": "Nunito Sans"
    },
    "text": {
      "font": "Nunito Sans"
    }
  }
}