{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "How Has the Number of International Students in Malaysia Changed?",
    "font": "Nunito Sans",
    "anchor": "start",
    "fontSize": 17
  },
  "data": {
    "values": [
      {"label": "Begin", "amount": 0},
      {"label": "2009", "amount": 16514.0},
      {"label": "2010", "amount": 6925.0},
      {"label": "2011", "amount": -4124.0},
      {"label": "2012", "amount": -7422.0},
      {"label": "2013", "amount": 3667.0},
      {"label": "2014", "amount": 42378.0},
      {"label": "2015", "amount": 11795.0},
      {"label": "2016", "amount": 12690.0},
      {"label": "2017", "amount": -23368.0},
      {"label": "2018", "amount": -43495.0},
      {"label": "2019", "amount": 24683.0},
      {"label": "End", "amount": 0}
    ]
  },
  "autosize": {
    "type": "fit", 
    "contains": "padding"
  },
  "width": 630,
  "height": 470,
  "background": "transparent",
  "transform": [
    {"window": [{"op": "sum", "field": "amount", "as": "sum"}]},
    {"window": [{"op": "lead", "field": "label", "as": "lead"}]},
    {
      "calculate": "datum.lead === null ? datum.label : datum.lead",
      "as": "lead"
    },
    {
      "calculate": "datum.label === 'End' ? 0 : datum.sum - datum.amount",
      "as": "previous_sum"
    },
    {
      "calculate": "datum.label === 'End' ? datum.sum : datum.amount",
      "as": "amount"
    },
    {
      "calculate": "(datum.label !== 'Begin' && datum.label !== 'End' && datum.amount > 0 ? '+' : '') + datum.amount",
      "as": "text_amount"
    },
    {"calculate": "(datum.sum + datum.previous_sum) / 2", "as": "center"}
  ],
  "encoding": {
    "x": {
      "field": "label",
      "type": "ordinal",
      "sort": null,
      "axis": {
        "labelAngle": 0, 
        "title": "Year",
        "labelFont": "Nunito Sans",
        "titleFont": "Nunito Sans"
      }
    },
    "tooltip": [
      {"field": "label", "type": "ordinal", "title": "Year"},
      {"field": "amount", "type": "quantitative", "title": "Change in Students"}
    ]
  },
  "layer": [
    {
      "mark": {"type": "bar", "size": 45},
      "encoding": {
        "y": {
          "field": "previous_sum",
          "type": "quantitative",
          "title": "Number of International Students",
          "axis": {
            "labelFont": "Nunito Sans",
            "titleFont": "Nunito Sans"
          }
        },
        "y2": {"field": "sum"},
        "color": {
          "condition": [
            {
              "test": "datum.label === 'Begin' || datum.label === 'End'",
              "value": "#b0bec5"
            },
            {"test": "datum.sum < datum.previous_sum", "value": "#ffcc80"}
          ],
          "value": "#90caf9"
        }
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "#404040",
        "opacity": 1,
        "strokeWidth": 2,
        "xOffset": -22.5,
        "x2Offset": 22.5
      },
      "encoding": {
        "x2": {"field": "lead"},
        "y": {"field": "sum", "type": "quantitative"}
      }
    },
    {
      "mark": {
        "type": "text",
        "dy": {"expr": "datum.amount >= 0 ? -4 : 4"},
        "baseline": {"expr": "datum.amount >= 0 ? 'bottom' : 'top'"},
        "font": "Nunito Sans"
      },
      "encoding": {
        "y": {"field": "sum", "type": "quantitative"},
        "text": {"field": "sum", "type": "nominal"}
      }
    },
    {
      "mark": {
        "type": "text",
        "fontWeight": "normal",
        "baseline": "middle",
        "font": "Nunito Sans",
        "fontSize": 9
      },
      "encoding": {
        "y": {"field": "center", "type": "quantitative"},
        "text": {"field": "text_amount", "type": "nominal"},
        "color": {
          "condition": [
            {
              "test": "datum.label === 'Begin' || datum.label === 'End'",
              "value": "#725a30"
            }
          ],
          "value": "white"
        }
      }
    }
  ],
  "config": {
    "text": {"fontWeight": "bolder", "color": "#404040", "font": "Nunito Sans", "fontSize": 9}
  }
}